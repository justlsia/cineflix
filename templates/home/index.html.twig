    </style>
{% endblock %}

{% block body %}
    <!-- Titre de la page -->
    <h1>Films tendances</h1>
    
    <!-- Contenu du carrousel -->
    <main id="app">
        <section class="carousel">
            <ul class="carousel__list">
                <!-- Boucle sur chaque film pour l'afficher -->
                {% for movie in movies %}
                    <li class="carousel__item" tabindex="0" {% if loop.first %} data-active="true" {% endif %}>
                        <div class="carousel__box">
                            <div class="carousel__image">
                                <img src="{{ movie.poster_path }}" alt="{{ movie.title }}" />
                            </div>
                            <div class="carousel__contents">
                                <h2 class="user__name">{{ movie.title }}</h2>
                                <h3 class="user__title">Popularité : {{ movie.popularity }}</h3>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>

            <!-- Navigation pour faire défiler les films -->
            <div class="carousel__nav">
                <button class="prev">Précédent</button>
                <button class="next">Suivant</button>
            </div>
        </section>
    </main>
{% endblock %}

{% block javascripts %}
    <script>
document.addEventListener("DOMContentLoaded", function() {
      const d = document;
      const $q = d.querySelectorAll.bind(d);
      const $g = d.querySelector.bind(d);
      const $prev = $g(".prev");
      const $next = $g(".next");
      const $list = $g(".carousel__list");

      if (!$prev || !$next || !$list) {
        console.error("Erreur : Les éléments nécessaires ne sont pas présents dans le DOM.");
        return; // Stoppe le script si les éléments ne sont pas présents
      }

      let auto;
      let pauser;

      const getActiveIndex = () => {
        const $active = $g("[data-active]");
        return getSlideIndex($active);
      };

      const getSlideIndex = ($slide) => {
        return [...$q(".carousel__item")].indexOf($slide);
      };

      const prevSlide = () => {
        const index = getActiveIndex();
        const $slides = $q(".carousel__item");
        const $last = $slides[$slides.length - 1];
        $last.remove();
        $list.prepend($last);
        activateSlide($q(".carousel__item")[index]);
      };

      const nextSlide = () => {
        const index = getActiveIndex();
        const $slides = $q(".carousel__item");
        const $first = $slides[0];
        $first.remove();
        $list.append($first);
        activateSlide($q(".carousel__item")[index]);
      };

      const chooseSlide = (e) => {
        const $slide = e.target.closest(".carousel__item");
        if (!$slide) return;
        const index = getSlideIndex($slide);
        activateSlide($slide);
      };

      const activateSlide = ($slide) => {
        if (!$slide) return;
        const $slides = $q(".carousel__item");
        $slides.forEach((el) => el.removeAttribute("data-active"));
        $slide.setAttribute("data-active", true);
        $slide.focus();
      };

      const autoSlide = () => {
        nextSlide();
      };

      const pauseAuto = () => {
        clearInterval(auto);
        clearTimeout(pauser);
      };

      const handleNextClick = (e) => {
        pauseAuto();
        nextSlide(e);
      };

      const handlePrevClick = (e) => {
        pauseAuto();
        prevSlide(e);
      };

      const handleSlideClick = (e) => {
        pauseAuto();
        chooseSlide(e);
      };

      const handleSlideKey = (e) => {
        switch (e.keyCode) {
          case 37:
          case 65:
            handlePrevClick();
            break;
          case 39:
          case 68:
            handleNextClick();
            break;
        }
      };

      const startAuto = () => {
        auto = setInterval(autoSlide, 3000);
      };

      startAuto();

      // Assurez-vous que les éléments existent avant d'ajouter des écouteurs
      $next.addEventListener("click", handleNextClick);
      $prev.addEventListener("click", handlePrevClick);
      $list.addEventListener("click", handleSlideClick);
      $list.addEventListener("keyup", handleSlideKey);
    });



    const updateSizes = () => {
    const root = document.documentElement;
    const activeSize = getComputedStyle(root).getPropertyValue('--active-size').trim();
    const inactiveSize = getComputedStyle(root).getPropertyValue('--inactive-size').trim();
    
    // Échange les valeurs
    root.style.setProperty('--active-size', inactiveSize);
    root.style.setProperty('--inactive-size', activeSize);
};

const activateSlide = ($slide) => {
    if (!$slide) return;
    const $slides = document.querySelectorAll(".carousel__item");
    $slides.forEach((el) => el.removeAttribute("data-active"));
    $slide.setAttribute("data-active", true);
    $slide.focus();
    
    // Met à jour les tailles après l'activation du nouveau slide
    updateSizes();
};

    </script>
{% endblock %}
