{% extends 'base.html.twig' %}

{% block title %}Fiche détaillée{% endblock %}

{% block stylesheets %}
<style>
/* Style personnalisé pour le film */
h1 {
    font-size: 2.5rem;
    margin-bottom: 15px;
}

h4 {
    font-size: 1.2rem;
    color: #6c757d;
}

p {
    font-size: 1.1rem;
    margin: 10px 0;
}

.actor-card, .similar-movie-card {
    margin-bottom: 20px;
}

/* Style de l'image du film */
.movie-image-container img {
    max-height: 300px;
    object-fit: cover;
    border: 5px solid #ccc;  /* Contour autour de l'image du film */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3); /* Box shadow autour de l'image */
    border-radius: 8px;
}

/* Style des cartes d'acteurs et de films similaires */
.card {
    border: 2px solid #ddd;  /* Contour léger autour des cartes */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Box shadow léger pour les cartes */
    border-radius: 8px;  /* Coins arrondis */
    overflow: hidden;
}

.card-img-top {
    max-height: 300px;
    object-fit: cover;
    border-bottom: 2px solid #ddd;  /* Ligne sous l'image */
}

/* Styles pour le carrousel horizontal */
.row {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
}

.card-body {
    padding: 10px;
}

.card-title {
    font-size: 1rem;
    text-align: center;
}

.card-text {
    font-size: 0.9rem;
    text-align: center;
}

/* Adaptations pour les petits écrans */
@media (max-width: 768px) {
    .actor-card, .similar-movie-card {
        flex: 1 0 40%;
        margin-bottom: 15px;
    }
}



</style>
{% endblock %}



{% block body %}


<div class="container mt-5">
    <div class="row">
        <!-- Image du film -->
        <div class="col-md-4">
            <img src="https://image.tmdb.org/t/p/w500/{{ movie.poster_path }}" alt="{{ movie.title }}" class="img-fluid rounded">
        </div>

        <!-- Détails du film -->
        <div class="col-md-8">
            <h1>Titre : {{ movie.title }}</h1>
            <h4>Date de sortie : {{ movie.release_date|date("d F Y") }}</h4>
            <p><strong>Genre:</strong> {{ movie.genres | map(g => g.name) | join(', ') }}</p>
            <p><strong>Synopsis:</strong> {{ movie.overview }}</p>
            <p><strong>Note:</strong> {{ movie.vote_average }} / 10</p>
            <p><strong>Durée:</strong> {{ movie.runtime }} minutes</p>
        </div>
    </div>
    

    <!-- Section des acteurs -->
    <h3 class="mt-5">Acteurs principaux</h3>
    <div class="row">
        {% for actor in credits.cast|slice(0, 5) %}
            <div class="col-md-2 actor-card">
                <div class="card">
                    <img src="https://image.tmdb.org/t/p/w500/{{ actor.profile_path }}" class="card-img-top" alt="{{ actor.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ actor.name }}</h5>
                        <p class="card-text">{{ actor.character }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Section des films similaires -->
    <h3 class="mt-5">Films similaires</h3>
    <div class="row">
        {% for similarMovie in similarMovies|slice(0, 5) %}
            <div class="col-md-2 similar-movie-card">
                <div class="card">
                    <img src="https://image.tmdb.org/t/p/w500/{{ similarMovie.poster_path }}" class="card-img-top" alt="{{ similarMovie.title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ similarMovie.title }}</h5>
                        <a href="{{ path('movie_detail', {'id': similarMovie.id}) }}" class="btn btn-primary">Voir détails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>




</div>






{% endblock %}



